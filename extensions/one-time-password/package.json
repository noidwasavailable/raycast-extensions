{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "one-time-password",
  "title": "One Time Password",
  "description": "Generate time-based one-time passwords",
  "icon": "icon.png",
  "author": "lachero",
  "contributors": [
    "csharp"
  ],
  "categories": [
    "Security",
    "Productivity"
  ],
  "keywords": [
    "authentication",
    "security",
    "verification",
    "code",
    "token",
    "login",
    "two-factor authentication",
    "OTP"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "one-time-password",
      "title": "One Time Password",
      "subtitle": "Generate time-based one-time passwords",
      "description": "Generate time-based one-time passwords",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "passwordVisibility",
      "description": "Display the generated password in the Raycast window for preview",
      "label": "Toggle password visibility",
      "type": "checkbox",
      "required": true,
      "default": true
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.76.0",
    "@raycast/utils": "^1.5.2",
    "hi-base32": "^0.5.1",
    "jimp": "^0.22.7",
    "jsqr": "^1.4.0",
    "otpauth": "^9.1.1",
    "protobufjs": "^7.2.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.27",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "react": "^18.2.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
